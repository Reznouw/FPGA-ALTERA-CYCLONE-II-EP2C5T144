
#include "sys/alt_stdio.h"
#include "system.h"
#include "altera_avalon_pio_regs.h"

void delay(int a){
	volatile int i = 0;
	while (i < a*10000){
			i++;
	}
}

int main()
{ 
  int var1;
  while (1){
	  var1 = IORD_ALTERA_AVALON_PIO_DATA(PIO_1_BASE);

	  if(var1 == 1){
		  IOWR_ALTERA_AVALON_PIO_DATA(PIO_0_BASE,0);
		  delay(50);

		  IOWR_ALTERA_AVALON_PIO_DATA(PIO_0_BASE,1);
		  delay(50);

		  IOWR_ALTERA_AVALON_PIO_DATA(PIO_0_BASE,2);
		  delay(50);

		  IOWR_ALTERA_AVALON_PIO_DATA(PIO_0_BASE,4);
		  delay(50);

		  IOWR_ALTERA_AVALON_PIO_DATA(PIO_0_BASE,1);
		  delay(50);

		  IOWR_ALTERA_AVALON_PIO_DATA(PIO_0_BASE,2);
		  delay(50);

		  IOWR_ALTERA_AVALON_PIO_DATA(PIO_0_BASE,4);
		  delay(50);
	  }
	  else if(var1 == 2){
		  IOWR_ALTERA_AVALON_PIO_DATA(PIO_0_BASE,0);
		  delay(50);

		  IOWR_ALTERA_AVALON_PIO_DATA(PIO_1_BASE,4);
		  delay(50);

		  IOWR_ALTERA_AVALON_PIO_DATA(PIO_0_BASE,2);
		  delay(50);

		  IOWR_ALTERA_AVALON_PIO_DATA(PIO_0_BASE,1);
		  delay(50);

		  IOWR_ALTERA_AVALON_PIO_DATA(PIO_0_BASE,4);
		  delay(50);

		  IOWR_ALTERA_AVALON_PIO_DATA(PIO_0_BASE,2);
		  delay(50);

		  IOWR_ALTERA_AVALON_PIO_DATA(PIO_0_BASE,1);
		  delay(50);
	  }
	  else{
		  IOWR_ALTERA_AVALON_PIO_DATA(PIO_0_BASE,7);
		  delay(50);

		  IOWR_ALTERA_AVALON_PIO_DATA(PIO_0_BASE,7);
		  delay(50);

		  IOWR_ALTERA_AVALON_PIO_DATA(PIO_0_BASE,7);
		  delay(50);

		  IOWR_ALTERA_AVALON_PIO_DATA(PIO_0_BASE,7);
		  delay(50);

		  IOWR_ALTERA_AVALON_PIO_DATA(PIO_0_BASE,7);
		  delay(50);

		  IOWR_ALTERA_AVALON_PIO_DATA(PIO_0_BASE,7);
		  delay(50);

	  }
  }
  return 0;
}
